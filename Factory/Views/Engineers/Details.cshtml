@{
  Layout = "_Layout";
}
@using Factory.Models
@model Factory.Models.Engineer

<h2>Engineer Details</h2>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name): <small class="text-muted">@Html.DisplayFor(model => model.Name)</small></h4>

<h4>Details: <small class="text-muted">@Html.DisplayFor(model => model.EngineerDetails)</small></h4>

<h3>Machines: </h3>
@if(@Model.JoinEntities.Count == 0)
{
  <p>This Engineer does not have any machines assigned yet!</p>
}
else
{
  <h4>This Engineer is qualified for the following machines:</h4>
  <ul>
    @foreach(EngineerMachine join in Model.JoinEntities)
    {
      <li>Machine: @join.Machine.Name</li>
      @using (Html.BeginForm("DeleteJoin", "Engineers"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete"/>
      }
    }
  </ul>
}

<p>@Html.ActionLink("Add a Machine", "AddMachine", new { id = Model.EngineerId })</p>
<hr>
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Name or Details", "Edit", new { id = Model.EngineerId })</p>
 <p>@Html.ActionLink("Delete this engineer", "Delete")</p>

<a href="/Engineers">Back to List</a>
<br>
<a href="/">Home</a>



@{
  Layout = "_Layout";
}
@using Factory.Models;

@if (@Model.Count == 0)
{
  <h3>No Engineers exist in the system yet!</h3>
} 
else
{
  <h3>Engineers for this factory:</h3>
  <ul>
    @foreach (Machine machine in Model)
    {
      <div class="list-group">
      <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }, new { @class = "font-weight-normal" })</li>
      </div>
    }     

  </ul>
}
<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>